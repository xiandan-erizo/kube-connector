{
    "name": "kube-connector",
    "version": "1.0.0",
    "description": "A kubernetes connector desktop app",
    "main": "main.js",
    "scripts": {
        "dist:mac": "electron-builder --mac",
        "dist:mac-universal": "electron-builder --mac --universal",
        "dist:mac-arm64": "electron-builder --mac --arm64",
        "dist:mac-x64": "electron-builder --mac --x64"
    },
    "dependencies": {
        "@kubernetes/client-node": "^0.22.3",
        "electron-store": "^8.1.0",
        "js-yaml": "^4.1.0",
        "ws": "^8.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "babel-loader": "^9.2.1",
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4"
    },
    "build": {
        "appId": "com.kube.connector",
        "productName": "KubeConnector",
        "asar": true,
        "compression": "maximum",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "package.json",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples,docs}",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "extraResources": [],
        "win": {
            "target": [
                "portable",
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64",
                        "universal"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "build/icons"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "afterPack": "afterPack.js"
    }
}